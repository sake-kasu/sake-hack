server:
  port: 8080
  mode: debug # debug, release, test
  gracefulShutdownTimeout: 30s

database:
  host: sake-hack-db
  port: 5432
  database: sake_hack_app
  user: postgres
  password: sakehacksakehack
  sslmode: disable
  maxOpenConns: 25
  maxIdleConns: 5
  connMaxLifetime: 5m

valkey:
  host: sake-hack-valkey
  port: 6379
  password: sakehacksakehack
  database: 0
  poolSize: 10
  minIdleConns: 5
  maxRetries: 3
  dialTimeout: 5s
  readTimeout: 3s
  writeTimeout: 3s

jwt:
  secret: "your-secret-key-change-me-in-production"
  expiration: 86400 # 24 hours in seconds
  cookieSecure: false # 本番環境では true に設定
  cookieName: "sake_hack_token"
  cookiePath: "/"
  cookieDomain: ""

cors:
  allowedOrigins:
    - "http://localhost:3000"
    - "http://localhost:8080"
  allowedMethods:
    - "GET"
    - "POST"
    - "PUT"
    - "DELETE"
    - "PATCH"
    - "OPTIONS"
  allowedHeaders:
    - "Origin"
    - "Content-Type"
    - "Accept"
    - "Authorization"
  exposedHeaders:
    - "Content-Length"
  allowCredentials: true
  maxAge: 43200 # 12 hours

logging:
  level: debug # debug, info, warn, error
  format: console # json (本番環境), console (開発環境)
